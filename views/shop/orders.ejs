<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(product => { %>
                                    <li class="orders__products-item"><%= product.product.title %> (<%= product.quantity %>) @  $<%= product.quantity * product.product.price%> - <a href="/orders/<%= order._id %>">Invoice</a></li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
                <h2>Total</h2>
                <p>$<%= total %></p>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>